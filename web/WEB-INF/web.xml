<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Topicmain</servlet-name>
        <servlet-class>com.pg.lib.Servlet.Topicmain</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Topicminor</servlet-name>
        <servlet-class>com.pg.lib.Servlet.Topicminor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Course</servlet-name>
        <servlet-class>com.pg.lib.Servlet.Course</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TopicmainService</servlet-name>
        <servlet-class>com.pg.lib.service.TopicmainService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>com.sun.ws.rest.impl.container.servlet.ServletAdaptor</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Group</servlet-name>
        <servlet-class>com.pg.lib.Servlet.Group</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Training</servlet-name>
        <servlet-class>com.pg.lib.Servlet.Training</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Topicmain</servlet-name>
        <url-pattern>/Topicmain</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Topicminor</servlet-name>
        <url-pattern>/Topicminor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Course</servlet-name>
        <url-pattern>/Course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TopicmainService</servlet-name>
        <url-pattern>/TopicmainService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Group</servlet-name>
        <url-pattern>/Group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Training</servlet-name>
        <url-pattern>/Training</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
